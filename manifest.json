{
  "manifest_version": 3,
  "name": "Open Comment Section with OAuth",
  "version": "1.0",
  "description": "An extension to open a comment section on the current tab with Google login.",
  "minimum_chrome_version": "116",
  "background": {
    "service_worker": "service-worker.js"
  },
  "permissions": ["identity", "sidePanel", "activeTab", "scripting", "tabs", "storage"],
  "oauth2": {
    "client_id": "229748091699-u6m7t1koof5ofc932ccjv0tm7ird3l3i.apps.googleusercontent.com",
    "scopes": ["openid", "email", "profile"]
  },
  "icons": {
    "16": "images/2.png",
    "48": "images/2.png",
    "128": "images/2.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/2.png",
      "48": "images/2.png",
      "128": "images/2.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel-tab.html"
  }
}
